<h1>Listing articles</h1>

<%= link_to 'New Article', new_article_path %>
<br>
<br>
<table >
  <tr align="center" bgcolor="#a9a9a9" onsort="this">
    <th>Title</th>
    <th>Text</th>
    <th>Created At</th>
    <th></th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr align="center" bgcolor="#f5f5dc">
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.created_at.to_s(:long) %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Back', welcome_index_path %>